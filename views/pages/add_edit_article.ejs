<!doctype>
<html>
    <head>
        <title>Create/Edit Article</title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css"
              integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Noto+Serif:400,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Noto+Sans:400,700" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/css/app.css"/>
    </head>
    <body>
        <div class="container mt-5">
            <h1><%= locals.article ? 'Edit' : 'Create New' %> Article</h1>
            <form method="post" action="">
                <div class="form-group">
                    <label>Title</label>
                    <input value="<%= locals.article ? locals.article.title : '' %>" class="form-control" type="text" name="title"/>
                </div>
                <div class="form-group">
                    <label>Sub Title</label>
                    <input value="<%= locals.article ? locals.article.sub_title : '' %>" class="form-control" type="text" name="sub_title"/>
                </div>
                <div class="form-group">
                    <label>Image Url</label>
                    <input value="<%= locals.article ? locals.article.image : '' %>" class="form-control" type="text" name="image"/>
                </div>
                <div class="form-group">
                    <label>Slug</label>
                    <input value="<%= locals.article ? locals.article.slug : '' %>" class="form-control" type="text" name="slug"/>
                </div>
                <div class="form-group">
                    <label>Published Date</label>
                    <input value="<%= locals.article ? locals.article.published_date : '' %>" class="form-control" type="text" name="published_date"/>
                </div>
                <div class="form-group">
                    <label>Author</label>
                    <select class="form-control" name="author">
                        <option value="">Select Author</option>
                        <% authors.forEach(function(author) { %>
                            <option <%= locals.article && locals.article.author == author.id_num ? 'selected' : '' %> value="<%= author.id_num %>"><%= author.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <input <%= locals.article && locals.article.is_published ? 'checked' : '' %> type="checkbox" name="is_published"/>
                    <label>Is Published</label>
                </div>
                <div class="form-group">
                    <label>Keywords</label>
                    <textarea rows="10" class="form-control" name="keywords"><%= locals.article ? locals.article.keywords : '' %></textarea>
                </div>
                <div class="form-group">
                    <label>Short Summary</label>
                    <input value="<%= locals.article ? locals.article.short_summary : '' %>" class="form-control" type="text" name="short_summary"/>
                </div>
                <div class="form-group">
                    <label>Summary</label>
                    <textarea rows="10" class="form-control" name="summary"><%= locals.article ? locals.article.summary : '' %></textarea>
                </div>
                <div class="form-group">
                    <label>Content</label>
                    <textarea style="font-family: 'Courier New'" rows="30" class="form-control" name="content"><%= locals.article ? locals.article.content : '' %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <input type="hidden" name="id_slug" value="<%= locals.article ? locals.article.slug : '' %>"/>
            </form>
        </div>
    </body>
</html>